/* pages/info/info.wxss */

.container{
  padding:50rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
 
}
.avatarDiv {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 350rpx;
  margin-left:auto;
  margin-right:auto;
}

.userinfo-avatar {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  margin-top:97rpx;
  border-radius: 50%;
}
.nameDiv {
  display:flex;
  z-index:1;
  margin-left:auto;
  margin-right:auto;
  width:400rpx;
  height:100rpx;
  justify-content: center;
}
.userinfo-nickname {
  
  font-size: 45rpx;
  font-weight: bold;
  
}
.editBlock {
 position: absolute;
 text-align: center;
 margin-top:9rpx;
 z-index:2;
 font-size:30rpx;
 font-weight: 300;
 border:1rpx solid grey;
 background-color: white;
 border-radius:15rpx;
 color:black;
 width:450rpx;
 height:55rpx;

}
.editor {
  position: absolute;
  right:50rpx;
  top:20rpx;
  font-size:65rpx;
}



.component {
  display: flex;
  flex-direction: column;

  margin-top:50rpx;
}
.help {
  display: flex;
  align-items: center;
  background-color:green;
  color:white;
  width:450rpx;
  border-radius: 30rpx;
  box-shadow: gray 5rpx 5rpx 10rpx 0;
  
}
.help .text{
  font-size: 35rpx;
  font-weight: 250;
  margin-left:20rpx;
}

.helpInner {
  width:100%;
  height:500rpx;
  background-color:dodgerblue;
  transform: opacity(1);
}
.groupInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:150rpx;
  border-top: 2rpx  solid lightgray ; 
  color:black;
  width:650rpx;
  height:550rpx;
  border-radius: 10rpx;

}
.groupInfo .text {
  position: absolute;
  margin-top:-25rpx;
  z-index:0;
  background-color:white;
  box-shadow:white 0rpx 0rpx 10rpx 20rpx;
  font-size: 30rpx;
  color:grey;
}

.info {
 margin-top:50rpx;
 margin-left:0rpx;
 text-align: left;
}
.icons {

  margin-left:10rpx;
  font-size:60rpx;
  color:black;
}

.words{
  float:right;
  margin-right:30rpx;
}
.weui-demo-dialog{
  z-index:999;
  visibility:hidden;
  opacity:0;
  transition: opacity 0.3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}

.des{
  margin-top:15rpx;
  margin-left: 45rpx;
  font-size: 27rpx;
  color:grey;
  font-weight: 320;
}

.des_down{
  margin-top:30rpx;
  margin-left: -395rpx;
  font-size: 27rpx;
  color:grey;
  font-weight: 320;
}