}

.group_des{
  position: relative;
  font-size: 30rpx;
  color: black;
  margin-left: 30rpx;
  font-weight: 350;
  margin-bottom: 15rpx;

}

.blank{
  height: 100rpx;
}

.line{
  position: relative;
